pipeline {
    agent any
    
    parameters {
        string(
            name: 'run-mode',
            defaultValue: 'test',
            description: 'Select the run mode',
        )
    }
    
    environment {
        BRANCH_NAME = 'master'
    }
    
    options {
        timestamps() 
    }
    
    stages {
        stage('SampleStage') {
            steps{
                script {
                    if ("${env.JOB_NAME}" == "Declarative Pipeline") {
                        echo "This is declarative pipeline sample"
                        echo "${env.JOB_NAME}"
                    } else {
                        echo "JOB NAME IS NOT CORRECT"
                    }
                }
            }
        }
        
        stage('Checkout') {
            steps{
                checkout scm
            }
        }
        
        stage('Build') {
            steps{
                sh 'mvn install'
            }
        }
    }
}
