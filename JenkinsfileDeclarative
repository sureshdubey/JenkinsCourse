pipeline {
    agent any
    
    parameters {
        string(
            name: 'run-mode',
            defaultValue: 'test',
            description: 'Select the run mode',
        )
    }
    
    environment {
        BRANCH_NAME = 'master'
    }
    
    options {
        timestamps()
    }
    
    stages {
        stage('SampleStage') {
            steps{
                echo "This is declarative pipeline sample"
                echo "${env.JOB_NAME}"
            }
        }
        
        stage('Checkout') {
            steps{
                git url : "https://github.com/sureshdubey/JenkinsCourse.git", branch : env.BRANCH_NAME
            }
        }
        
        stage('Build') {
            steps{
                sh 'mvn install'
            }
        }
    }
}
